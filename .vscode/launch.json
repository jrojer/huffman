    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) encoder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/output_64/huffman",
            "args": ["-v", "-c", "/home/jrojer/Documents/work/csc_cpp/huffman/test/in", "/home/jrojer/Documents/work/csc_cpp/huffman/test/out"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/output_64",
            "preLaunchTask": "make",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) decoder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/output_64/huffman",
            "args": ["-v", "-d", "/home/jrojer/Documents/work/csc_cpp/huffman/test/out", "/home/jrojer/Documents/work/csc_cpp/huffman/test/out_dec"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/output_64",
            "preLaunchTask": "make",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
